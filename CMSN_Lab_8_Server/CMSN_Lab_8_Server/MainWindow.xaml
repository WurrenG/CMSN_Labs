<Window x:Class="CMSN_Lab_8_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMSN_Lab_8_Server"
        mc:Ignorable="d"
        Title="Server" Height="450" Width="800" Closed="Window_Closed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="647*"/>
            <ColumnDefinition Width="107*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="launcher" Content="Turn On" HorizontalAlignment="Left" Margin="330,0,0,20" Height="20" VerticalAlignment="Bottom" Click="launcher_Click" Grid.Column="1"/>
        <TextBox x:Name="requestsLog" Margin="20,70,20,60" TextWrapping="Wrap" IsEnabled="False" Grid.ColumnSpan="3"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,34,0,0" Text="Local port" TextWrapping="Wrap" VerticalAlignment="Top" Width="61" Grid.Column="1"/>
        <TextBox x:Name="localPortName" HorizontalAlignment="Left" Margin="354,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>

    </Grid>
</Window>
